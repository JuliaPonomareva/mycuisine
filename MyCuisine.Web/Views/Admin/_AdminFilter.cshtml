@model AdminFilterViewModel
@{
    var path = ViewContext.HttpContext.Request.Path;
    var search = ViewContext.HttpContext.Request.Query["search"];
    var showAll = ViewContext.HttpContext.Request.Query["showAll"];
    var isShowAllChecked = string.Equals(showAll, "true", StringComparison.OrdinalIgnoreCase);
}
<div class="card">
    <div class="card-body">
        <form action="@path" method="get">
            <div class="input-group">
              <input id="search" name="search" value="@search" type="search" placeholder="@Model.Placeholder" class="form-control rounded" />
              <button type="submit" class="btn btn-outline-primary">Поиск</button>
            </div>
            <div class="form-check mt-2">
              <input onchange="Check(this)" id="showAll" name="showAll" value="@isShowAllChecked.ToString().ToLower()" @(isShowAllChecked ? "checked": "") class="form-check-input" type="checkbox">
              <label for="showAll" class="form-check-label">
                Отображать неактивные
              </label>
            </div>
        </form>
    </div>
</div>


<script>
    function Check(value) {
        document.querySelector('#showAll').value = value.checked;
    }
</script>